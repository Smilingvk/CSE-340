<style>
  .vehicle-detail {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    background-color: #fff;
    padding: 0;
    margin: 2rem auto;
    max-width: 1200px;
  }
  .vehicle-detail-image {
    width: 100%;
    background-color: #f8f8f8;
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .vehicle-detail-image img {
    width: 100%;
    max-width: 500px;
    height: auto;
    object-fit: contain;
  }
  .vehicle-detail-info {
    width: 100%;
    padding: 2rem;
  }
  .vehicle-title {
    font-size: 2rem;
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
    font-weight: 700;
  }
  .vehicle-price-section {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    padding: 2rem;
    border-radius: 12px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border: 3px solid #4a90e2;
  }
  .vehicle-price {
    font-size: 3rem;
    color: #2c5aa0;
    font-weight: 800;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    letter-spacing: -1px;
  }
  .vehicle-details-list {
    background-color: #ffffff;
    padding: 0;
    margin: 1.5rem 0;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
  }
  .detail-item {
    display: flex;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid #f0f0f0;
    font-size: 1.1rem;
    transition: background-color 0.2s;
  }
  .detail-item:hover {
    background-color: #f8f9fa;
  }
  .detail-item:last-child {
    border-bottom: none;
  }
  .detail-label {
    font-weight: 700;
    color: #555;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }
  .detail-value {
    color: #1a1a1a;
    font-weight: 600;
    font-size: 1.1rem;
  }
  .vehicle-description {
    background-color: #f9fafb;
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid #4a90e2;
    margin-top: 1.5rem;
  }
  .vehicle-description h3 {
    font-size: 1.5rem;
    color: #1a1a1a;
    margin: 0 0 1rem 0;
    font-weight: 700;
  }
  .vehicle-description p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #555;
    margin: 0;
  }
  @media screen and (min-width: 768px) {
    .vehicle-detail {
      flex-direction: row;
      gap: 0;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      border-radius: 12px;
      overflow: hidden;
    }
    .vehicle-detail-image {
      flex: 0 0 45%;
      padding: 3rem;
    }
    .vehicle-detail-info {
      flex: 1;
      padding: 3rem;
    }
    .vehicle-title {
      font-size: 2.5rem;
    }
    .vehicle-price {
      font-size: 3.5rem;
    }
  }
  @media screen and (min-width: 1024px) {
    .vehicle-detail-image img {
      max-width: 600px;
    }
  }
</style>

<%- detailView %>