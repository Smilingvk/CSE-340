<% if (messages.notice) { %>
  <p class="notice"><%= messages.notice %></p>
<% } %>

<h2>Welcome <%= accountData.account_firstname %></h2>

<a href="/account/update/<%= accountData.account_id %>" class="account-link">Update Account Information</a>

<% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/">Manage Inventory</a></p>
<% } %>

<style>
  .notice {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }
  
  h2 {
    color: #333;
    margin-bottom: 1.5rem;
  }
  
  h3 {
    color: #00bcd4;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }
  
  .account-link {
    display: inline-block;
    background-color: #00bcd4;
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 4px;
    margin: 1rem 0;
    transition: background-color 0.3s;
  }
  
  .account-link:hover {
    background-color: #0097a7;
  }
  
  p a {
    color: #00bcd4;
    text-decoration: none;
    font-weight: bold;
  }
  
  p a:hover {
    text-decoration: underline;
  }
</style>